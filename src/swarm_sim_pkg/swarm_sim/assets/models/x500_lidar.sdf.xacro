<?xml version="1.0" ?>
<sdf version="1.9" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:arg name="namespace" default="uav_0"/>
  <model name="$(arg namespace)">
    <include merge="true">
      <uri>https://fuel.gazebosim.org/1.0/PX4/models/x500</uri>
    </include>

    <!-- Velocity Control with Namespaced Topic -->
    <plugin
      filename="gz-sim-velocity-control-system"
      name="gz::sim::systems::VelocityControl">
      <link_name>base_link</link_name>
      <topic>/model/$(arg namespace)/cmd_vel</topic>
    </plugin>
    
    <plugin
      filename="gz-sim-odometry-publisher-system"
      name="gz::sim::systems::OdometryPublisher">
      <odom_frame>world</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <dimensions>3</dimensions>
    </plugin>

    <!-- Broadcast TF for all links -->
    <plugin
      filename="gz-sim-pose-publisher-system"
      name="gz::sim::systems::PosePublisher">
      <publish_link_pose>true</publish_link_pose>
      <publish_sensor_pose>true</publish_sensor_pose>
      <publish_collision_pose>false</publish_collision_pose>
      <publish_visual_pose>false</publish_visual_pose>
      <publish_nested_model_pose>true</publish_nested_model_pose>
      <use_pose_vector_msg>true</use_pose_vector_msg>
      <static_publisher>true</static_publisher>
      <static_update_frequency>1</static_update_frequency>
    </plugin>

    <!-- Camera (Fixed on base) -->
    <link name="camera_link">
      <pose relative_to="base_link">0.1 0 0.1 0 0 0</pose>
      <visual name="visual">
        <geometry><box><size>0.02 0.05 0.02</size></box></geometry>
        <material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material>
      </visual>
      <sensor name="camera" type="camera">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>/model/$(arg namespace)/camera/image_raw</topic>
      </sensor>
    </link>
    <joint name="camera_joint" type="fixed">
        <parent>base_link</parent>
        <child>camera_link</child>
    </joint>

    <!-- Spinning Lidar Link -->
    <link name="lidar_spin_link">
        <pose>0 0 0.25 0 0 0</pose> <!-- On top of X500 -->
        <inertial>
            <mass>0.1</mass>
            <inertia>
                <ixx>0.0001</ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy>0.0001</iyy>
                <iyz>0</iyz>
                <izz>0.0001</izz>
            </inertia>
        </inertial>
        <visual name="visual">
            <geometry>
                <cylinder>
                    <radius>0.04</radius>
                    <length>0.05</length>
                </cylinder>
            </geometry>
            <material><ambient>0 0 1 1</ambient><diffuse>0 0 1 1</diffuse></material>
        </visual>
        
        <!-- 3D LiDAR attached to spinning link -->
        <sensor name="lidar_3d" type="gpu_lidar">
          <topic>/model/$(arg namespace)/points</topic>
          <update_rate>10</update_rate>
          <ray>
            <scan>
              <horizontal>
                <samples>360</samples>
                <resolution>1</resolution>
                <min_angle>-3.14159</min_angle>
                <max_angle>3.14159</max_angle>
              </horizontal>
              <vertical>
                <samples>16</samples>
                <resolution>1</resolution>
                <min_angle>-0.261799</min_angle>
                <max_angle>0.261799</max_angle>
              </vertical>
            </scan>
            <range>
              <min>0.1</min>
              <max>10.0</max>
            </range>
          </ray>
          <visualize>true</visualize>
          <always_on>1</always_on>
        </sensor>
    </link>

    <joint name="lidar_spin_joint" type="revolute">
        <parent>base_link</parent>
        <child>lidar_spin_link</child>
        <axis>
            <xyz>0 0 1</xyz>
            <limit>
                <lower>-1.79769e+308</lower>
                <upper>1.79769e+308</upper>
            </limit>
        </axis>
    </joint>
    
    <!-- Joint Controller Plugin to apply velocity to the joint -->
    <plugin filename="gz-sim-joint-controller-system" name="gz::sim::systems::JointController">
      <joint_name>lidar_spin_joint</joint_name>
      <initial_velocity>6.28</initial_velocity> <!-- 1 revolution per second -->
    </plugin>

  </model>
</sdf>
